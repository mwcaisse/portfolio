{% extends "layout.njk" %}

{% block content %}

<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link active" href="#">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#about">About</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#skills">Technical Skills</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#experience">Experience</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#projects">Projects</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#contact">Contact</a>
        </li>
    </ul>
    <ul class="navbar-nav navbar-right">
        <li>
            <a class="nav-icon" href="https://github.com/mwcaisse" target="_blank">
                <i class="fa fa-github fa-2x"></i>
            </a>
        </li>
    </ul>
</nav>

<div id="name" class="jumbotron">
    <div class="name-content">
        <h1>Mitchell Caisse</h1>
        <h2>Software Developer</h2>
        <a class="btn-resume btn btn-outline-secondary" href="{{ contextRoot }}res/resume.pdf" target="_blank">Download Resume</a>
    </div>
</div>

<!-- Start of About Me Div -->
<div id="about" class="black-container">
    <div class="container">
        <h3>About Me</h3>
        <p>I am a motivated software developer with a penchant for creating intuitive user interfaces. 
        That is not to say I don't know my way around a web service or database. 
        I am a quick learner who thrives when thrown into situations with new and unfamiliar technologies and libraries.
        I can often be found in a dark room coding, if I'm not I am likely cycling, driving, or bothering friends or family.</p>
    </div>
</div>
<!-- End of About Me Div-->


<div class="container">
    <h3 class="title">
        Experience
    </h3>

    {% for company in companies %}
        <div class="card" style="margin-bottom:3rem;">
            <div class="card-header">
                <p class="card-header-title">{{company.name}}</p>
                <p class="card-header-title" style="justify-content: flex-end">{{company.title}}</p>
            </div>
            <div class="card-content">               
                {% for point in company.points %}
                    <p style="padding-bottom: 0.75rem">{{point}}</p>
                {% endfor %}
                {% if company.skills.length > 0 %}
                    <p>
                        <b>Related Skills:</b> {{ company.skills | join(", ") }}
                    </p>
                {% endif %}
            </div>
            <div class="card-footer">
                {% for date in company.dates %}
                <p style="padding:0.75rem">{{date.start}} - {{date.end}}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>

<div class="container">
    <h3 class="title">Skills</h3>

    {% for category in skill_categories %}
    <div class="card">
        <div class="card-header">
            <p class="card-header-title">{{category.name}}</p>
        </div>
        <div class="card-content">
            <div class="columns">
                {% for skill in category.skills %}
                <div class="column">
                    <img src="{{contextRoot }}/img/logos/{{skill.logo}}" style="width: 48px;" />             
                    <p>{{skill.title}}</p>
                </div>
                {% endfor %}
            </div>
            
        </div>
    </div>
    {% endfor %}
</div>


<!-- Start of Projects Div-->

<div id="projects" class="container">
    <h3>Projects</h3>
     
    <div class="row">

        {% for project in projects %}

            {% if loop.index0 % 3 === 0 %}
            </div>
            <div class="row">
            {% endif %}

            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{ contextRoot }}{{ project.thumbnail }}" />
                </div>
                <a href="{{ contextRoot }}{{ project.link }}">
                    <div class="project-info">
                        <span class="project-text">
                            <h3>{{ project.name }}</h3>
                            <h5>{{ project.description }}</h5>
                        </span>
                    </div>
                </a>
            </div>

            {% endfor %}

        </div>
    
    </div>
    <!-- End of Projects Div-->

    <div id="contact" class="black-container">
        <div class="container">
            <h3>Contact</h3>
            
            <div class="row">
                <div id="contact-icon" class="col">
                    <i class="fa fa-envelope"></i>
                </div>
                <div class="col">
                    <form id="formContact">
                        <div class="form-group" data-bind="css: {'has-danger': $data.Name.ShowError}">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Enter name"
                                   data-bind="textInput: $data.Name,
                                      css: {'form-control-danger': $data.Name.ShowError}" />
                            <div class="form-control-feedback"
                                 data-bind="text: $data.Name.ValidationMessage,
                                    visible: $data.Name.ShowError"></div>
                        </div>

                        <div class="form-group" data-bind="css: {'has-danger': $data.Email.ShowError}">
                            <label for="inputEmail">Email</label>
                            <input type="text" class="form-control form-control-danger" id="inputEmail" placeholder="Enter email"
                                   data-bind="textInput: $data.Email, ,
                                      css: {'form-control-danger': $data.Email.ShowError}" />
                            <div class="form-control-feedback"
                                 data-bind="text: $data.Email.ValidationMessage,
                                    visible: $data.Email.ShowError"></div>
                        </div>

                        <div class="form-group" data-bind="css: {'has-danger': $data.Message.ShowError}">
                            <label for="inputMessage">Message</label>
                            <textarea class="form-control form-control-danger" id="inputMessage" rows="5"
                                      data-bind="textInput: $data.Message,
                                         css: {'form-control-danger': $data.Message.ShowError}"></textarea>
                            <div class="form-control-feedback"
                                 data-bind="text: $data.Message.ValidationMessage,
                                    visible: $data.Message.ShowError"></div>
                        </div>

                        <button type="button" class="btn btn-primary" data-bind="click: $data.Send">Send</button>

                        <div data-bind="with: $data.Alert" style="padding-top: 15px;">
                            <div class="alert" data-bind="visible: $data.Show, css: $data.Type" style="display: none">
                                <button type="button" class="close" data-bind="click: $data.Hide"><span aria-hidden="true">&times;</span></button>
                                <strong data-bind="visible: $data.HasBoldText, text: $data.BoldText"></strong>&nbsp;<span data-bind="text: $data.Message">This is the alert message!</span>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

            

        </div>
    </div>



{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.2.js"></script>    
    <script type="text/javascript" src="{{ contextRoot }}js/contactViewModel.js"></script>
{% endblock %}